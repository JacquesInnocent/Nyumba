<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="131dp"
    tools:layout_editor_absoluteY="31dp"
    app:layout_constraintEnd_toStartOf="@drawable/splash"
    app:layout_constraintEnd_toEndOf="@drawable/splash"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:src="@drawable/logo" />


    <ImageView
        android:id="@+id/apartmentImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_marginBottom="169dp" />

    <TextView
        android:id="@+id/detailsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="Kampala Only"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:paddingLeft="110dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/bookingButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/roundedbutton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Help"
        android:textAllCaps="false"
        android:onClick="onBookNow"
        />
    <Button
        android:id="@+id/feedbackButton"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/bookingButton"
        android:background="@drawable/roundedbutton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Feedback"
        android:textAllCaps="false"
        android:onClick="onFeedback"/>

    <TextView
        android:id="@+id/textView_Selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailsButton"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="Select a division to find Apartments in Vicinity"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView_Selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <RadioButton
            android:id="@+id/nakawa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nakawa Division"
            android:textStyle="italic"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kampala"
            android:text="Kampala Division"
            android:textStyle="italic"
            />
        <RadioButton
            android:id="@+id/makindye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makindye Division"
            android:textStyle="italic"
            />
        <RadioButton
            android:id="@+id/rubaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rubaga Division"
            android:textStyle="italic"
            />
    </RadioGroup>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:background="@drawable/beautifulbutton"
        android:onClick="onContinue"
        />


</RelativeLayout>

</android.support.constraint.ConstraintLayout>
